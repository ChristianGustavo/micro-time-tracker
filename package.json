{
  "name": "micro-time-tracker",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ci": "npm run build:components && npm run build:micro-time-tracker",
    "build:micro-time-tracker": "ng build --prod --sourceMap=false --base-href /micro-time-tracker/",
    "build:components": "npm run build:button && npm run build:clock && npm run build:digital-clock && npm run build:header && npm run build:dashboard",
    "build:button": "ng build --prod --single-bundle --project button --output-hashing none --sourceMap=false --output-path src/assets/micro-time-tracker/button",
    "build:clock": "ng build --prod --single-bundle --project clock --output-hashing none --sourceMap=false --output-path src/assets/micro-time-tracker/clock",
    "build:digital-clock": "ng build --prod --single-bundle --project digital-clock --output-hashing none --sourceMap=false --output-path src/assets/micro-time-tracker/digital-clock",
    "build:header": "ng build --prod --single-bundle --project header --output-hashing none --sourceMap=false --output-path src/assets/micro-time-tracker/header",
    "build:dashboard": "ng build --prod --single-bundle --project dashboard --output-hashing none --sourceMap=false --output-path src/assets/micro-time-tracker/dashboard && npm run package:dashboard",
    "package:dashboard": "bash -c 'cat src/assets/micro-time-tracker/dashboard/{polyfills,scripts}.js >> src/assets/micro-time-tracker/dashboard/main.js'",
    "test": "ng test",
    "test:ci": "ng test --watch=false --code-coverage --source-map true",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~11.2.1",
    "@angular/common": "~11.2.1",
    "@angular/compiler": "~11.2.1",
    "@angular/core": "~11.2.1",
    "@angular/elements": "^11.2.9",
    "@angular/forms": "~11.2.1",
    "@angular/platform-browser": "~11.2.1",
    "@angular/platform-browser-dynamic": "~11.2.1",
    "@angular/router": "~11.2.1",
    "ngx-build-plus": "^11.0.0",
    "rxjs": "~6.6.0",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.1102.1",
    "@angular/cli": "~11.2.1",
    "@angular/compiler-cli": "~11.2.1",
    "@types/jasmine": "~3.6.0",
    "@types/node": "^12.11.1",
    "codelyzer": "^6.0.0",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.1.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "protractor": "~7.0.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "typescript": "~4.1.2"
  }
}
